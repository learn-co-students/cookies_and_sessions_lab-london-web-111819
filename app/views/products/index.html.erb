<% if session[:cart] %>

    <ul>
        <% session[:cart].each do |product| %>

            <li>
            
                <%= product %>
            
            </li>

        <% end %>
    </ul>

<% end %>

<p>Add a product</p>

<%= form_tag do %>

    <%= label_tag :product %>
    <%= text_field_tag :product %>

    <%= submit_tag 'add to cart' %>

<% end %>

